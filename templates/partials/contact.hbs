<div class="container bg-light mt-5" id="contactid">
    <div class="row">


        <div class="col-xxl-8 col-10 col-md-8 mx-auto mt-4">
            <h1 class="text-center abt_heading">Contact Us</h1>
            <p class="text-center about_para">We will be happy to help you ❤️ </p>
            <form action="/contact" method="POST">
                <div class="form-group">
                    <div class="form-group">
                        <label for="exampleInputPassword1" class="box">Full Name</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Enter your name"
                            name="name">
                    </div>
                    <label for="exampleInputEmail1" class="box">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        name="email">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                        else.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1" class="box">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" name="password">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1" class="box">Phone</label>
                    <input type="text" class="form-control" id="exampleInputPassword1" name="phone ">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1" class="box">Message</label>
                    <input type="text" class="form-control" id="exampleInputPassword1" name="message">
                </div>

                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div>




                <button type="submit" class="btn btn-primary btn-lg form_button">Submit</button>
            </form>
        </div>
    </div>
</div>